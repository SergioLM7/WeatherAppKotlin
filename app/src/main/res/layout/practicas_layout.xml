<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFDE7">
    <!-- Cabecera fija -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:text="Demo LinearLayout: orientación, gravity y weight"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <!-- Cuerpo flexible que ocupa el resto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">
        <!-- Fila: icono + textos (anidado) + botón acción al final -->

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="12dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elemento destacado"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción más larga que puede ocupar
varias líneas"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"/>
</LinearLayout>
    <!-- Tres tarjetas distribuidas por weight -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:orientation="horizontal"
android:paddingTop="12dp">
<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:text="1"
    android:background="#FFECB3"
    android:layout_marginEnd="6dp"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:text="2"
    android:background="#C8E6C9"
    android:layout_marginHorizontal="6dp"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:text="3"
    android:background="#BBDEFB"
    android:layout_marginStart="6dp"/>
</LinearLayout>
    <!-- Boton centrado usando layout_gravity -->
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:text="Acción central"/>
    </LinearLayout>
    <!-- Pie fijo -->
<Button
android:id="@+id/btnVolver"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Volver"/>

</LinearLayout>